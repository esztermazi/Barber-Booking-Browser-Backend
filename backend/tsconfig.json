{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "src",
    "outDir": "dist",

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "isolatedModules": true,
    "types": ["node", "jest"]
  },
  "include": ["src"]
}
